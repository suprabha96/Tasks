#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define FILE_NAME "students.dat"

// Structure for student record
struct Student {
    char name[50];
    int roll;
    float marks;
};

// Function prototypes
void addStudent();
void displayAll();
void searchStudent();
int rollExists(int roll);

int main() {
    int choice;

    while (1) {
        printf("\n===== Student Management System =====\n");
        printf("1. Add Student\n");
        printf("2. Display All Students\n");
        printf("3. Search by Roll Number\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: addStudent(); break;
            case 2: displayAll(); break;
            case 3: searchStudent(); break;
            case 4: exit(0);
            default: printf("Invalid choice. Try again.\n");
        }
    }
    return 0;
}

// Check if roll already exists
int rollExists(int roll) {
    struct Student s;
    FILE *fp = fopen(FILE_NAME, "rb");
    if (!fp) return 0;
    while (fread(&s, sizeof(s), 1, fp)) {
        if (s.roll == roll) {
            fclose(fp);
            return 1;
        }
    }
    fclose(fp);
    return 0;
}

// Add new student
void addStudent() {
    struct Student s;
    FILE *fp = fopen(FILE_NAME, "ab");
    if (!fp) {
        printf("Error opening file.\n");
        return;
    }

    printf("Enter Roll Number: ");
    scanf("%d", &s.roll);

    if (rollExists(s.roll)) {
        printf("Error: Roll Number already exists!\n");
        fclose(fp);
        return;
    }

    printf("Enter Name: ");
    scanf(" %[^\n]", s.name);
    printf("Enter Marks: ");
    scanf("%f", &s.marks);

    fwrite(&s, sizeof(s), 1, fp);
    fclose(fp);
    printf("Student added successfully.\n");
}

// Display all students
void displayAll() {
    struct Student s;
    FILE *fp = fopen(FILE_NAME, "rb");
    if (!fp) {
        printf("No records found.\n");
        return;
    }

    printf("\nRoll\tName\t\tMarks\n");
    printf("-------------------------------\n");
    while (fread(&s, sizeof(s), 1, fp)) {
        printf("%d\t%-15s %.2f\n", s.roll, s.name, s.marks);
    }
    fclose(fp);
}

// Search student by roll number
void searchStudent() {
    int roll, found = 0;
    struct Student s;
    FILE *fp = fopen(FILE_NAME, "rb");
    if (!fp) {
        printf("No records found.\n");
        return;
    }

    printf("Enter Roll Number to Search: ");
    scanf("%d", &roll);

    while (fread(&s, sizeof(s), 1, fp)) {
        if (s.roll == roll) {
            printf("Record Found: Roll=%d, Name=%s, Marks=%.2f\n",
                   s.roll, s.name, s.marks);
            found = 1;
            break;
        }
    }
    if (!found) printf("No student found with Roll=%d\n", roll);

    fclose(fp);
}